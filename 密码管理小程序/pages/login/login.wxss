page{
  background-color: #FFF;
}

.container{
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.login {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 100rpx;
}

.login-input{
  background-color: #FFF;
  margin-top: 20rpx;
  height: 30rpx;
  width: 500rpx;
  text-align: center;
}

.login-button{
  margin-top: 30rpx;
  width: 400rpx;
  height: 70rpx;
  font-size: 12pt;
  font-weight: bold;
  line-height: 70rpx;
  font-family: '微软雅黑';
}

.other{
  width: 750rpx;
  margin-top: 100rpx;
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
}

.other-item{
  padding: 0 20rpx;
}
